package warmup;
import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Date;
import java.util.PriorityQueue;


public class Calendar {
	
	private String name;
	private PriorityQueue<Event> events;
	private User owner;
	private SimpleDateFormat simpleDateFormatter;
	
	public Calendar(User owner, String name) {
		this.owner = owner;
		this.name = name;
		this.events = new PriorityQueue<Event>();
		this.simpleDateFormatter = new SimpleDateFormat("kk:mm dd.MM.yy");
	}
	
	public void addEvent(String eventName, String startDate, String endDate) {
		Date stD = null;
		Date enD = null;
		try {
			stD = simpleDateFormatter.parse(startDate);
			enD = simpleDateFormatter.parse(endDate);
		} catch (ParseException e) {
			System.out.println(e.toString());
		}
		Event newEvent = new Event(eventName, stD, enD);
		this.events.add(newEvent);
		System.out.println("events: " + this.events + " " + simpleDateFormatter.format(newEvent.getStartDate()) + " till " + simpleDateFormatter.format(newEvent.getEndDate()));
	}
	
	public String getName() {
		return this.name;
	}

	public PriorityQueue<Event> getEvents() {
		return this.events;
	}
	
	public static void main(String[] args) {
		Calendar cal = new Calendar(new User("Dani"), "Home");
		cal.addEvent("Lunch with your Mom", "18:45 12.04.11", "20:00 12.04.11");
	}

}
