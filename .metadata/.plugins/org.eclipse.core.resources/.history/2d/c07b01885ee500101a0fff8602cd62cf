package warmupTests;

import static org.junit.Assert.*;

import java.util.Date;
import java.util.PriorityQueue;

import org.junit.Before;
import org.junit.Test;

import warmup.*;

public class CalendarTest {
	
	private Calendar cal;
	private User owner;
	private PriorityQueue<Event> events;
	
	@Before
	public void init() {
		owner = new User("Dani");
		cal = owner.getCal();
		events = cal.getEvents();
	}
	
	@Test
	public void shouldAddEvent() {
		assertTrue(events.isEmpty());
		owner.createNewEvent();
		assertFalse(events.isEmpty());
	}
	
	@Test
	public void shouldAddEventInCorrectOrder() {
		assertTrue(events.isEmpty());
		Date startDate1 = new Date();
		Date startDate2 = new Date();
		Date endDate1 = new Date();
		Date endDate2 = new Date();
		startDate1.setTime(10);
		startDate2.setTime(2000);
		assertTrue(startDate1.before(startDate2));
		endDate1.setTime(20);
		endDate2.setTime(4000);
		assertTrue(endDate1.before(endDate2));
		Event event1 = new Event("Event1", startDate1, endDate1);
		Event event2 = new Event("Event2", startDate2, endDate2);
		assertTrue(event1.compareTo(event2) == 1);
	}

}
